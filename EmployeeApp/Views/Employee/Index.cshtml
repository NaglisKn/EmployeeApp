@model IEnumerable<EmployeeApp.Models.Employee>
@model PagedList.IPagedList<EmployeeApp.Models.Employee>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Employees";
}

<h2>Employees</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "Employees", FormMethod.Get))
{
    <p>
        Filter: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
}
    <table class="table" id="tableID">
        <tr>
                @Html.DisplayNameFor(model => model.FirstName)
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalaryNet)
            </th>
            <th>
                @Html.Label("SalaryGross")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            double npd = 310;
            double pvm = 0.15;
            double Hinsurance = 0.06;
            double Sinsurance = 0.03;
            double gross = item.SalaryNet;

            double npdReal = 310;
            double grossPay = new double();
            double net = new double();
            double taxes = new double();

            if (gross > 380)
            {
                npdReal = npd - (gross - 380) * 0.5;
                if (npdReal < 0) { npdReal = 0; }
            }
            grossPay = gross - npdReal;

            taxes = gross * Hinsurance + gross * Sinsurance + grossPay * pvm;
            net = gross - taxes;
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalaryNet)
                </td>
                <td>
                    <p>@net</p>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
